{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schemas.com/processing/CTF",
    "title": "CTF_estimation",
    "description": "JSON Schema for electron microscopy CTF estimation part of processing",
    "type": "object",
    "properties": {
        "Amplitude_contrast": {
            "description": "Amplitude contrast",
            "type": "number",
            "default": 0.07
        },
        "Defocus":{
            "type": "object",
            "properties": {
                "Output_min_defocus":{
                    "description": "Minimum defocus",
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Minimum defocus value"
                        },
                        "unit": {
                            "type": "string",
                            "description": "Unit of minimum defocus"
                        }
                    },
                    "required": ["value", "unit"]
                },
                "Output_max_defocus":{
                    "description": "Maximum defocus",
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Maximum defocus value"
                        },
                        "unit": {
                            "type": "string",
                            "description": "Unit of maximum defocus"
                        }
                    },
                    "required": ["value", "unit"]
                },
                "Ouput_avg_defocus":{
                    "description": "Average value of defocus",
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Average defocus value"
                        },
                        "unit": {
                            "type": "string",
                            "description": "Unit of average defocus"
                        }
                    },
                    "required": ["value", "unit"]
                },
                "Defocus_histogram":{
                    "description": "Filename of the defocus values histogram",
                    "type": "string"
                },
                "Micrograph_examples": {
                    "description": "Filename of micrographs shown as examples in ascending order of defocus value",
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "Resolution":{
            "type": "object",
            "properties": {
                "Output_min_resolution":{
                    "description": "Minimum resolution",
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Minimum resolution value"
                        },
                        "unit": {
                            "type": "string",
                            "description": "Unit of minimum resolution"
                        }
                    },
                    "required": ["value", "unit"]
                },
                "Output_max_resolution":{
                    "description": "Maximum resolution",
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Maximum resolution value"
                        },
                        "unit": {
                            "type": "string",
                            "description": "Unit of maximum resolution"
                        }
                    },
                    "required": ["value", "unit"]
                },
                "Ouput_avg_resolution":{
                    "description": "Average value of resolution",
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Average resolution value"
                        },
                        "unit": {
                            "type": "string",
                            "description": "Unit of average resolution"
                        }
                    },
                    "required": ["value", "unit"]
                },
                "Resolution_histogram":{
                    "description": "Filename of the resolution values histogram",
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "Astigmatism":{
            "type": "object",
            "properties": {
                "Astigmatism_histogram":{
                    "description": "Filename of the astigmatism values histogram",
                    "type": "string"
                }
            }
        }
    },
    "additionalProperties": false
}
