{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schemas.com/processing/classes2D",
    "title": "classes2D",
    "description": "JSON Schema for electron microscopy 2D classsification part of processing",
    "type": "object",
    "properties": {
        "Number_classes_2D": {
            "description": "Number of 2D classes",
            "type": "number"
        },
        "Particles_per_class": {
            "description": "Number of particles per 2D class",
            "type": "array"
            },
        "Images_classes_2D": {
            "description": "Filename of the image containing 2D class images",
            "type": "string"
        },
        "Resolution": {
            "description": "Resolution of classes 2D",
            "type": "object",
            "properties": {
                "value": {
                    "type": "number",
                    "description": "Resolution value"
                },
                "unit": {
                    "type": "string",
                    "description": "Unit of resolution"
                }
            },
            "required": ["value", "unit"]
        },
    "additionalProperties": false
}
}
