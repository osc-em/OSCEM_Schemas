{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schemas.com/processing/classes3D",
    "title": "classes3D",
    "description": "JSON Schema for electron microscopy 3D classsification part of processing",
    "type": "object",
    "properties": {
        "Number_classes_3D": {
            "description": "Number of 3D classes",
            "type": "number"
        },
        "Particles_per_class": {
            "description": "Number of particles per 3D class",
            "type": "array"
            },
        "Images_classes_3D": {
            "description": "Name of image with images of classes 3D",
            "type": "string"
        },
        "Orthogonal_slices": {
            "type": "object",
            "properties": {
                "Orthogonal_slices_X":{
                    "description": "Orthogonal slices in X",
                    "type": "string"
                },
                "Orthogonal_slices_Y":{
                    "description": "Orthogonal slices in Y",
                    "type": "string"
                },
                "Orthogonal_slices_Z":{
                    "description": "Orthogonal slices in Z",
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "Isosurface_images": {
            "type": "object",
            "properties": {
                "Front_view":{
                    "description": "Front view isosurface image",
                    "type": "string"
                },
                "Side_view":{
                    "description": "Side view isosurface image",
                    "type": "string"
                },
                "Top_view":{
                    "description": "Top view isosurface image",
                    "type": "string"
                }
            },

    "additionalProperties": false
}
}
}