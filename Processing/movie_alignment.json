{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schemas.com/processing/movie_alignment",
    "title": "movie_alignment",
    "description": "JSON Schema for electron microscopy movie alignment part of processing",
    "type": "object",
    "properties": {
        "Method": {
            "description": "Method used for movie alignment",
            "type": "string"
        },
        "Frames_aligned": {
            "type": "object",
            "properties": {
                "Frame0":{
                    "description": "Number of starting frame",
                    "type": "number"
                },
                "FrameN":{
                    "description": "Number of last frame",
                    "type": "number"
                }
            },
            "additionalProperties": false
        },
        "Binning_factor": {
            "description": "Binning factor",
            "type": "number"
        },
        "Maximum_resolution": {
            "description": "Maximum resolution",
            "type": "object",
            "properties": {
                "value": {
                    "type": "number",
                    "description": "Maximum resolution value"
                },
                "unit": {
                    "type": "string",
                    "description": "Unit of maximum resolution"
                }
            },
            "required": ["value", "unit"]
        },
        "Rotate_gain_reference":{
            "description": "Rotate gain reference in degrees",
            "type": "string" 
        },
        "Flip_gain_reference": {
            "description": "Flip gain reference",
            "type": "string"
        },
        "Ouput_avg_shift": {
            "description": "Average shift at output",
            "type": "object",
            "properties": {
                "value": {
                    "type": "number",
                    "description": "Average shift value"
                },
                "unit": {
                    "type": "string",
                    "description": "Unit of average shift"
                }
            },
            "required": ["value", "unit"]
        },
        "Output_max_shift":{
            "description": "Maximum shift at output",
            "type": "object",
            "properties": {
                "value": {
                    "type": "number",
                    "description": "Maximum shift value"
                },
                "unit": {
                    "type": "string",
                    "description": "Unit of maximum shift"
                }
            },
            "required": ["value", "unit"]
        },
        "Crop_offsets":{
            "type": "object",
            "properties": {
                "Crop_offsetX":{
                    "description": "Crop offset in X",
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Crop offset in X value"
                        },
                        "unit": {
                            "type": "string",
                            "description": "Unit of crop offset in X"
                        }
                    },
                    "required": ["value", "unit"]
                },
                "Crop_offsetY":{
                    "description": "Crop offset in Y",
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Crop offset in Y value"
                        },
                        "unit": {
                            "type": "string",
                            "description": "Unit of crop offset in Y"
                        }
                    },
                    "required": ["value", "unit"]
                }
            },
            "additionalProperties": false
        },
        "Crop_dims":{
            "type": "object",
            "properties": {
                "Crop_dimsX":{
                    "description": "Crop dim in X",
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Crop dim in X value"
                        },
                        "unit": {
                            "type": "string",
                            "description": "Unit of crop dim in X"
                        }
                    },
                    "required": ["value", "unit"]
                },
                "Crop_dimsY":{
                    "description": "Crop dim in Y",
                    "type": "object",
                    "properties": {
                        "value": {
                            "type": "number",
                            "description": "Crop dim in Y value"
                        },
                        "unit": {
                            "type": "string",
                            "description": "Unit of crop dim in Y"
                        }
                    },
                    "required": ["value", "unit"]
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
