{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schemas.com/processing/movie_alignment",
    "title": "movie_alignment",
    "description": "JSON Schema for electron microscopy movie alignment part of processing",
    "type": "object",
    "properties": {
        "Method": {
            "description": "Method used for movie alignment",
            "type": "string"
        },
        "Frames_aligned": {
            "type": "object",
            "properties": {
                "Frame0":{
                    "description": "Number of starting frame",
                    "type": "number"
                },
                "FrameN":{
                    "description": "Number of last frame",
                    "type": "number"
                }
            },
            "additionalProperties": false
        },
        "Binning_factor": {
            "description": "Binning factor",
            "type": "number"
        },
        "Maximum_resolution": {
            "description": "Maximum resolution in angstroms",
            "type": "number"
        },
        "Rotate_gain_reference":{
            "description": "Rotate gain reference in degrees",
            "type": "string" 
        },
        "Flip_gain_reference": {
            "description": "Flip gain reference",
            "type": "string"
        },
        "Dose_weighted": {
            "description": "Wether dose was weighted",
            "type": "boolean"
        },
        "Ouput_avg_shift": {
            "description": "Average shift at output (in pixels)",
            "type": "number"
        },
        "Output_max_shift":{
            "description": "Maximum shift at output (in pixels)",
            "type": "number"
        },
        "Crop_offsets":{
            "type": "object",
            "properties": {
                "Crop_offsetX":{
                    "description": "Cropp offset in X (in pixels)",
                    "type": "number"
                },
                "Crop_offsetY":{
                    "description": "Cropp offset in Y (in pixels)",
                    "type": "number"
                }
            },
            "additionalProperties": false
        },
        "Crop_dims":{
            "type": "object",
            "properties": {
                "Crop_dimsX":{
                    "description": "Crop dim in X (in pixels)",
                    "type": "number"
                },
                "Crop_dimsY":{
                    "description": "Crop dim in Y (in pixels)",
                    "type": "number"
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
