{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schemas.com/processing/movie_maxshift",
    "title": "movie_maxshift",
    "description": "JSON Schema for electron microscopy movie max shift part of processing",
    "type": "object",
    "properties": {
        "Discarded_movies": {
            "description": "Number of discarded movies",
            "type": "number"
        },
        "Rejection_type": {
            "description": "Rejection criteria",
            "type": "string"
        },
        "Max_frame_shift": {
            "description": "Maximum frame shift to discard frame",
            "type": "object",
            "properties": {
                "value": {
                    "type": "number",
                    "description": "Maximum frame shift value"
                },
                "unit": {
                    "type": "string",
                    "description": "Unit of maximum frame shift"
                }
            },
            "required": ["value", "unit"]
        },
        "Max_movie_shift": {
            "description": "Maximum movie shift to discard movie",
            "type": "object",
            "properties": {
                "value": {
                    "type": "number",
                    "description": "Maximum movie shift value"
                },
                "unit": {
                    "type": "string",
                    "description": "Unit of maximum movie shift"
                }
            },
            "required": ["value", "unit"]
        },
        "Output_avg_shift": {
            "description": "Average shift at output",
            "type": "object",
            "properties": {
                "value": {
                    "type": "number",
                    "description": "Average shift value"
                },
                "unit": {
                    "type": "string",
                    "description": "Unit of average shift"
                }
            },
            "required": ["value", "unit"]
        },
        "Output_max_shift": {
            "description": "Maximum shift at output",
            "type": "object",
            "properties": {
                "value": {
                    "type": "number",
                    "description": "Maximum shift value"
                },
                "unit": {
                    "type": "string",
                    "description": "Unit of Maximum shift"
                }
            },
            "required": ["value", "unit"]
        },
        "Shift_histogram": {
            "description": "Filename of the shift values histogram"
        }
    },
    "additionalProperties": false
}