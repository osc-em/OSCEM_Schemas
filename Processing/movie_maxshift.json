{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://schemas.com/processing/movie_maxshift",
    "title": "movie_maxshift",
    "description": "JSON Schema for electron microscopy movie max shift part of processing",
    "type": "object",
    "properties": {
        "Discarded_movies": {
            "description": "Number of discarded movies",
            "type": "number"
        },
        "Rejection_type": {
            "description": "Rejection type for discarding images",
            "type": "string"
        },
        "Max_frame_shift": {
            "description": "Maximum frame shift to discard images (in Amstrongs)",
            "type": "number"
        },
        "Max_movie_shift": {
            "description": "Maximum movie shift to discard images (in Amstrongs)",
            "type": "number"
        },
        "Ouput_avg_shift": {
            "description": "Average shift at output (in pixels)",
            "type": "number"
        },
        "Output_max_shift":{
            "description": "Maximum shift at output (in pixels)",
            "type": "number"
        }
    },
    "additionalProperties": false
}